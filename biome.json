{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    },
    "ignore": [
      "**/components/ui/*",
      "**/hooks/use-toast.ts",
      "app/lib/route-tree.gen.ts",
      "app/graphql-env.d.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      ".wrangler",
      "app/graphql-env.d.ts",
      "dist",
      "workspace/.next",
      "workspace/out"
    ]
  }
}
